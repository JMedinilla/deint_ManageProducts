<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amador.manageProduct">

    <application
        android:name="com.amador.manageProduct.model.ProductApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.amador.manageProduct.view.LoginActivity" />
        <activity android:name="com.amador.manageProduct.view.HomeActivity" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.amador.manageProduct.view.SplashScreen_Activity"
            android:theme="@style/SplashScreen">

        </activity>
        <activity android:name="com.amador.manageProduct.presenter.AcountSettingActivity" />
        <activity android:name="com.amador.manageProduct.presenter.Preference" />
        <activity android:name="com.amador.manageProduct.view.SignUpActivity"
            android:windowSoftInputMode="adjustPan"
            />
    </application>

</manifest>