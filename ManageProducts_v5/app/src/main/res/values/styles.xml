<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
        <item name="actionModeCloseDrawable">@mipmap/ic_actionmode_back</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="error" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="Widget.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/colorHint</item>
        <item name="android:background">@color/colorHint</item>
        <item name="actionModeBackground">@color/colorHint</item>
        <item name="android:actionModeBackground">@color/colorHint</item>
    </style>

</resources>
